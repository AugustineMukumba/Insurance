@model InsuranceClaim.Models.SettingModel
@{
    ViewBag.Title = "EditSetting";
    Layout = "~/Views/Shared/_InsuranceMain.cshtml";
}

<style>
    #dot {
        padding: 10%;
    }
</style>
<div class="container" id="dot">
    <div class="product-page-design">
        <h2>Setting Edit</h2>
        @using (Html.BeginForm("EditSetting", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.HiddenFor(x => x.CreatedBy)
            @Html.HiddenFor(x => x.CreatedDate)
            @Html.HiddenFor(x => x.Id)
            <div class="form-group">
                @Html.Label("keyname", new { @class = "col-md-3 control-label" })
                <div class="col-md-5">
                    @Html.TextBoxFor(m => m.keyname, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Value", new { @class = "col-md-3 control-label" })
                <div class="col-md-5">
                    @Html.TextBoxFor(m => m.value, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x=>x.ValueType, new { @class = "col-md-3 control-label" })
                <div class="col-md-5">

                    @Html.DropDownListFor(x => x.ValueType, ViewBag.eSettingValueType as SelectList, "Select Value Type", new { @class = "form-control" })
                    @*<select name="ValueType" class="form-control" id="ValueType">
                        <option value="1">Percentage</option>
                        <option value="2">Amount</option>
                    </select>*@
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-3"></div>
                <div class="col-sm-5"><input type="submit" name="Update" value="Update" class="btn btn-primary btn sm" /></div>
            </div>
        }
    </div>
</div>

