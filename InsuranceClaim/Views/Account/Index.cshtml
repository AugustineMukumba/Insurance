@model InsuranceClaim.Models.SettingModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_InsuranceMain.cshtml";
}

<style>
    #dot {
        padding: 10%;
    }
</style>
<div class="container" id="dot">
    <div class="product-page-design">
        <h2>Setting</h2>
        @using (Html.BeginForm("SaveSetting", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="form-group">
                @Html.LabelFor(x=>x.keyname, new { @class = "col-md-3 control-label" })
                <div class="col-md-5">

                    <div class="form-group-inputs">
                        @Html.TextBoxFor(m => m.keyname, new { @class = "form-control" ,@placeholder= "Enter Key Name" })
                        @Html.ValidationMessageFor(x => x.keyname, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x=>x.value, new { @class = "col-md-3 control-label" })
                <div class="col-md-5">

                    <div class="form-group-inputs">
                        @Html.TextBoxFor(m => m.value, new { @class = "form-control", @placeholder = "Enter Value" })
                        @Html.ValidationMessageFor(x => x.value, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x=>x.ValueType, new { @class = "col-md-3 control-label" })
                <div class="col-md-5">
                    @Html.DropDownListFor(x => x.ValueType, ViewBag.eSettingValueType as SelectList, "Select Value Type", new { @class = "form-control" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-3"></div>
                <div class="col-sm-5"><input type="submit" name="Submit" class="btn btn-primary btn sm" /></div>
            </div>
        }
    </div>
</div>

