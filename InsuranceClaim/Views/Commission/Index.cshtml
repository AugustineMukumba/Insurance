@model InsuranceClaim.Models.AgentCommissionModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_InsuranceMain.cshtml";
}




<h2></h2>

<style>
    #dot {
        padding: 10%;   
    }
</style>
<div class="container" id="dot">
    <div class="product-page-design">
        <h2>Commission</h2>
        @using (Html.BeginForm("CommissionSave", "Commission", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="form-group">
                @Html.Label("Commission Name", new { @class = "col-md-4 control-label" })
                <div class="col-md-5">

                    <div class="form-group-inputs">
                        @Html.TextBoxFor(m => m.CommissionName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.CommissionName, "", new { @class = "text-danger" })
                    </div>

                </div>
            </div>
            <div class="form-group">
                @Html.Label("Commission Amount", new { @class = "col-md-4 control-label" })
                <div class="col-md-5">
                    <div class="form-group-inputs">
                        @Html.TextBoxFor(m => m.CommissionAmount, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.CommissionAmount, "", new { @class = "text-danger" })
                    </div>
                    </div>
                </div>
            <div class="form-group">
                @Html.Label("Management Commission", new { @class = "col-md-4 control-label" })
                <div class="col-md-5">
                    <div class="form-group-inputs">
                        @Html.TextBoxFor(m => m.ManagementCommission, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.ManagementCommission, "", new { @class = "text-danger" })
                    </div>
                    </div>
                </div>
            <div class="form-group">
                <div class="col-sm-4"></div>
                <div class="col-sm-5">
                    <input type="submit" name="Submit" class="btn btn-primary btn sm" />
                </div>
            </div>
        }
    </div>
</div>
