<script type="text/javascript">
    var today;

    function setPolicyEndDate(numberOfMonth) {
        today = new Date();
        today.setMonth(today.getMonth() + numberOfMonth);
        var dd = today.getDate();
        var mm = today.getMonth() + 1; //January is 0!

        var yyyy = today.getFullYear();
        if (dd < 10) {
            dd = '0' + dd;
        }
        if (mm < 10) {
            mm = '0' + mm;
        }
        var today = dd + '/' + mm + '/' + yyyy;
        $("#EndDate").val(today);
        var dateParts = today.split("/");        
        today = new Date(dateParts[2], dateParts[1] - 1, dateParts[0]);
        today.setDate(today.getDate() + 1);
        dd = today.getDate();
        mm = today.getMonth() + 1; //January is 0!

        yyyy = today.getFullYear();
        if (dd < 10) {
            dd = '0' + dd;
        }
        if (mm < 10) {
            mm = '0' + mm;
        }
        var today = dd + '/' + mm + '/' + yyyy;
        $("#RenewalDate").val(today);
    }

    $(document).ready(function () { // will trigger when the document is ready
        today = new Date();
        var dd = today.getDate();
        var mm = today.getMonth() + 1; //January is 0!

        var yyyy = today.getFullYear();
        if (dd < 10) {
            dd = '0' + dd;
        }
        if (mm < 10) {
            mm = '0' + mm;
        }
        var today = dd + '/' + mm + '/' + yyyy;

        $("#StartDate").val(today);
        $("#TransactionDate").val(today).css("background-color", "lightgray");


        $("#PaymentTermId").change(function () {

            var selectedTerm = $("#PaymentTermId option:selected").val();
            debugger;
            switch (parseInt(selectedTerm)) {
                case 1:
                    setPolicyEndDate(12);
                    break;
                case 2:
                    setPolicyEndDate(4)
                    break;
                case 3:
                    setPolicyEndDate(3);
                    break;
                case 4:
                    setPolicyEndDate(1);
                    break;
            }

        });

    });
</script>
