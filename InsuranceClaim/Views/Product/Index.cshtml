@model InsuranceClaim.Models.ProductModel
@using System.Web.Mvc



@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_InsuranceMain.cshtml";
}

<h2></h2>

<style>
    #dot {
        padding: 10%;
    }
</style>
<div class="container" id="dot">
    <div class="product-page-design">
        <h2>Products</h2>
        @using (Html.BeginForm("ProductSave", "Product", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="form-group">
            @Html.Label("Product Name", new { @class = "col-md-3 control-label" })
            <div class="col-md-5">

                <div class="form-group-inputs">
                    @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control",@placeholder="Product Name"})
                    @Html.ValidationMessageFor(x => x.ProductName, "", new { @class = "text-danger" })
                    @*@Html.ValidationMessageFor(x => x.ProductName, "", new { @class = "text-danger" })*@
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Product Code", new { @class = "col-md-3 control-label" })
            <div class="col-md-5">
                <div class="form-group-inputs">
                    @Html.TextBoxFor(m => m.ProductCode, new { @class = "form-control",@placeholder="Product Code" })
                    @Html.ValidationMessageFor(x => x.ProductCode, "", new { @class = "text-danger" })
                    @*@Html.ValidationMessageFor(x => x.ProductCode, "", new { @class = "text-danger" })*@
                </div>
                    
                </div>
            </div>

        <div class="form-group">
            <div class="col-sm-3"></div>
            <div class="col-sm-5"><input type="submit" name="Submit" class="btn btn-primary btn sm" /></div>
        </div>
}
    </div>
        </div>

