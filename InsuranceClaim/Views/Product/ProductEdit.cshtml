@model InsuranceClaim.Models.ProductModel
@{
    ViewBag.Title = "ProductEdit";
    Layout = "~/Views/Shared/_InsuranceMain.cshtml";
}

<style>
    #dot {
        padding: 10%;
    }
</style>
<div class="container" id="dot">
    <div class="product-page-design">
        <h2>Product Edit</h2>
        @using (Html.BeginForm("ProductEdit", "Product", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="form-group">
                @Html.Label("Product Name", new { @class = "col-md-3 control-label" })
                <div class="col-md-5">
                    @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Product Code", new { @class = "col-md-3 control-label" })
                <div class="col-md-5">
                    @Html.TextBoxFor(m => m.ProductCode, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-3"></div>
                <div class="col-sm-5"><input type="submit" name="Update" value="Update" class="btn btn-primary btn sm" /></div>
            </div>
        }
    </div>
</div>
