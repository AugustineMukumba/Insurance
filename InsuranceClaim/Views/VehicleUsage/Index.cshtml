@model InsuranceClaim.Models.VehicleUsageModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_InsuranceMain.cshtml";
}


<style>
    #dot {
        padding: 10%;
    }
</style>
<div class="container" id="dot">

    @using (Html.BeginForm("SaveVehicalUsage", "VehicleUsage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
    <div class="form-group">
        @Html.Label("Product Id", new { @class = "col-md-3 control-label" })
        <div class="col-md-4">
            @Html.ValidationMessageFor(x => x.ProductId, "", new { @class = "text-danger" })
            @Html.DropDownListFor(x => x.ProductId, new SelectList(ViewBag.Products, "Id", "ProductName"), new { @class = "form-control" })
            
        </div>
    </div>
    <div class="form-group">
        @Html.Label("VehUsage", new { @class = "col-md-3 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.VehUsage, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.VehUsage, "", new { @class = "text-danger" })

        </div>
    </div>
    <div class="form-group">
        @Html.Label("ComprehensiveRate", new { @class = "col-md-3 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.ComprehensiveRate, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.ComprehensiveRate, "", new { @class = "text-danger" })

            @*@Html.ValidationMessageFor(x => x.ProductName, "", new { @class = "text-danger" })*@
        </div>
    </div>
    <div class="form-group">
        @Html.Label("MinComp Amount", new { @class = "col-md-3 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.MinCompAmount, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.MinCompAmount, "", new { @class = "text-danger" })

            @*@Html.ValidationMessageFor(x => x.ProductName, "", new { @class = "text-danger" })*@
        </div>
    </div>
    <div class="form-group">
        @Html.Label("ThirdParty Rate", new { @class = "col-md-3 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.ThirdPartyRate, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.ThirdPartyRate, "", new { @class = "text-danger" })

            @*@Html.ValidationMessageFor(x => x.ProductName, "", new { @class = "text-danger" })*@
        </div>
    </div>
    <div class="form-group">
        @Html.Label("MinThird Amount", new { @class = "col-md-3 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.MinThirdAmount, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.MinThirdAmount, "", new { @class = "text-danger" })

            @*@Html.ValidationMessageFor(x => x.ProductName, "", new { @class = "text-danger" })*@
        </div>
    </div>
    <div class="form-group">
        @Html.Label("FTPAmount", new { @class = "col-md-3 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.FTPAmount, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.FTPAmount, "", new { @class = "text-danger" })

            @*@Html.ValidationMessageFor(x => x.ProductName, "", new { @class = "text-danger" })*@
        </div>
    </div>
    <div class="form-group">
        @Html.Label("AnnualTPAmount", new { @class = "col-md-3 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.AnnualTPAmount, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.AnnualTPAmount, "", new { @class = "text-danger" })

            @*@Html.ValidationMessageFor(x => x.ProductName, "", new { @class = "text-danger" })*@
        </div>
    </div>
    <div><input type="submit" name="Submit" class="btn btn-primary btn sm" /></div>
    }
</div>